<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<ImageView android:id="@+id/imageView" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center" />

	<ScrollView android:id="@+id/bookDetails" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/content" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="5px" />
	</ScrollView>

	 <Button android:id="@+id/closeBookDetailsButton" android:layout_below="@id/bookDetails"
	 android:layout_width="wrap_content" android:layout_height="wrap_content"
	 android:layout_centerHorizontal="true" android:text="Ok" />


</RelativeLayout>
